{% extends 'base.html.twig' %}

{% block body %}
    <h1><a href="{{ path('article_show', {'id': article.id }) }}">{{article.title}}</a></h1>
    <p>{{ article.content }}</p>
    </br>
    </br>

    <strong>Tags :</strong>
    <ul>
        {% for tag in article.tags %}
            <a href="{{ path('tag_show', {'name': tag.name })}}"><li>{{ tag.name}} </li></a>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>

{% endblock %}